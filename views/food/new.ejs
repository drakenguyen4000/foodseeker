<%- include("../partials/header") %>
<div class="container">
    <h1 class="text-center text-success">New Food Entry</h1>
    <div class="seeker-form">
        <form action="/food" method="POST">
            <div class="form-group">
                <label><h5>Dish Name</h5></label>
                <input class="form-control" name="dish" type="text">
            </div>
            <div class="form-group">
                <label><h5>Image Url</h5></label>
                <input class="form-control" name="image" type="text">
            </div>
            <div class="form-group">
                <label><h5>Price</h5></label>
                <input class="form-control" name="price" min="0.00" step="0.01" type="number">
            </div>
            <div class="form-group">
                <label><h5>Restaurant</h5></label>
                <input class="form-control" name="restaurant" type="text">
            </div>
            <div class="form-group">
                <label><h5>Website</h5></label>
                <input class="form-control" name="website" type="text">
            </div>
            <div class="form-group">
                <label><h5>Location</h5></label>
                <input class="form-control" type="text" name="location" placeholder="papaya King, NY">
            </div>
            <div class="form-group">
                <label><h5>Review</h5></label>
                <textarea class="form-control" style="height: 200px;" name="review"></textarea>
            </div>
            <div class="form-group d-flex justify-content-center">
                <button class="btn btn-lg btn-primary px-6">Submit</button>
            </div>
        </form>
    </div>
</div>

<%- include("../partials/footer") %>
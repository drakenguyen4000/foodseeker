<%- include("../partials/header") %>
<div class="container">
    <h2 class="text-center text-success mt-4">Add New Comments to <%=food.dish%></h2>
    <div class="mx-auto w-50 mt-4">
        <form action="/food/<%=food._id%>/comments" method="POST">
            <label><h5>Comment</h5></label>
            <div class="form-group">
                <textarea class="form-control" name="comment[text]"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-info btn-block mx-auto w-50 mt-2">Submit</button>
            </div>
        </form>
    </div>
</div>

<%- include("../partials/footer") %>